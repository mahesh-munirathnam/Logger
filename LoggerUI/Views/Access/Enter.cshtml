@model TekinroadsPortal.Models.Login
@{
    ViewBag.Title = "Enter";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Login - TekinRoads Private Limited LLP</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <link href="~/Css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Css/bootstrap-responsive.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Css/font-awesome.css" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600" rel="stylesheet">
    <link href="~/Css/style.css" rel="stylesheet" type="text/css">
    <link href="~/Css/pages/signin.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div class="account-container">
        <div class="content clearfix">
            @using (Html.BeginForm("Enter", "Access", FormMethod.Post))
            {
                @Html.AntiForgeryToken();
                @Html.ValidationSummary(true, "", new { @class = "text-danger" });

                <div style="margin-bottom:10%;text-align:center">
                    <a class="brand">
                        <img src="~/Images/tekinroads-logo.png" width="100px" height="100px" />
                    </a>
                </div>
                <div class="login-fields">
                    <div class="field">
                        @Html.LabelFor(u => u.Email)
                        @Html.TextBoxFor(u => u.Email, new { @class = "login username-field", @placeholder = "Email" })
                        @Html.ValidationMessageFor(u => u.Email, "", new { @class = "text-danger" })
                        @*<label for="username">Username</label>
                            <input type="text" id="username" name="username" value="" placeholder="Username" class="login username-field" />*@
                    </div> <!-- /field -->
                    <div class="field">
                        @Html.LabelFor(u => u.Password)
                        @Html.PasswordFor(u => u.Password, new { @class = "login password-field", @placeholder = "Password" })
                        @Html.ValidationMessageFor(u => u.UserName, "", new { @class = "text-danger" })
                        @*<label for="password">Password:</label>
                            <input type="password" id="password" name="password" value="" placeholder="Password" class="login password-field" />*@
                    </div> <!-- /password -->
                </div> <!-- /login-fields -->
                <div class="login-actions">
                    <input type="submit" value="Sign In" class="button btn btn-success btn-large" />
                </div>
            }
        </div> <!-- /content -->
    </div>
    <script src="~/Scripts/jquery-1.7.2.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/signin.js"></script>
</body>
</html>
